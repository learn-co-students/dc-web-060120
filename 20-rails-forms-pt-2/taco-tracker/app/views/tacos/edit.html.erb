<h1>Edit this taco</h1>

<%= form_for @taco do |f| %>
    <%= f.label :name, "Taco Name" %>
    <%= f.text_field :name %>
    <%= f.label :price %>
    <%= f.number_field :price, min: 0, step: 0.01 %>
    <%= f.label :vegetarian %>
    <%= f.select :vegetarian, [true, false] %>
    <%= f.submit %>
<% end %>