<!DOCTYPE html>
<html>
  <head>
    <title>Taco Tracker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% unless controller_name == "sessions" && action_name == "login" %>

      <% if session[:user_id] %>

          <div>Welcome <%= current_user.username %></div>
          <%= link_to "Log out", logout_path %>

      <% else %>

          <%= link_to "Log In", login_path %>

      <% end %>
    <% end %>

    <%= yield %>


    <% unless params[:controller] == "restaurants" && params[:action] == "index" %>
      <footer>
        <div>This app was made by the students of 2 Commit 2 Git</div>
      </footer>
    <% end %>
  </body>
</html>



